---
import "../styles/global.scss";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-Hant-TW">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="Description" content=" Bruno Yu 余俊毅 前端開發人員 履歷" />
    <meta property="og:title" content="Bruno 作品" />
    <meta
      property="og:description"
      content="Bruno Yu 余俊毅 前端開發人員 履歷 "
    />
    <meta property="og:url" content="" />
    <meta property="og:image" content="./assets/images/stamp.png" />
    <meta property="og:locale" content="zh_TW" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Bruno Yu 余俊毅前端開發人員履歷" />
    <link rel="icon" href="./favicon.ico" type="image/x-icon" />
    <link rel="bookmark" href="./favicon.ico" type="image/x-icon" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
  </body>
</html>
